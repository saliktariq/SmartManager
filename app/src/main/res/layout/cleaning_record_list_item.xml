<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <!-- Followed guide: https://www.codevscolor.com/android-kotlin-delete-item-recyclerview-->


    <TextView
        android:id="@+id/taskName"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deleteProbe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:text="Cleaning Task"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/cleaningCompletionDate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deleteProbe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:text="Completion Date"
        android:layout_marginLeft="8dp" />
    <Button
        android:id="@+id/deleteCleaningTask"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_delete_24"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginRight="8dp" />


</LinearLayout>