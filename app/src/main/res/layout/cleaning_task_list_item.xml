<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/supplierSingleRecord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/cleaningTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Clean Canopies"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cleaningTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Take down all filters and wash them with degreaser. Clean the canopies inside and out."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/taskFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Weekly Task"
        android:textStyle="bold"
        android:textSize="12sp" />

</LinearLayout>